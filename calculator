#include<stdio.h>
#include<conio.h>
#include<math.h>
int main()
{
	int a,b,c;
	char op;
	printf("calculator program\n");
	printf("+add\n-sub\n*mul\n/div");
	printf("\n Enter a operating symbol");
	scanf("%c",&op);
	printf("Enter two numbers:");
	scanf("%d%d",&a,&b);
	switch(op)
	{case '+':
		c=a+b;
		break;
		case '-':
			c=a-b;
			break;
			case'*':
				c=a*b;
				break;
				case'/':
					c=a/b;
					break;
				}
					getch();
}
